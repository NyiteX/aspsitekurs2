@model aspsitekurs2.ViewModels.UserViewModel



<!-- Navbar Start -->
<div class="container-fluid bg-white sticky-top">
    <div class="container">
        <nav class="navbar navbar-expand-lg bg-white navbar-light py-2 py-lg-0">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img class="img-fluid" src="/img/logo.png" alt="Logo">
            </a>
            <button type="button" class="navbar-toggler ms-auto me-0" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav ms-auto">
                    <a class="nav-item nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    <a href="about.html" class="nav-item nav-link">About</a>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a class="nav-item nav-link" asp-controller="Auth" asp-action="Login">Login</a>
                    }
                    else
                    {
                        <form asp-controller="Auth" asp-action="Logout" method="post">
                            @Html.AntiForgeryToken()

                            <button type="submit" class="nav-item nav-link btn">Logout</button>
                        </form>
                    }
                   
                    <a href="contact.html" class="nav-item nav-link">Contact</a>
                </div>
   
                <div class="d-flex m-3 me-0">

                    <a asp-controller="User" asp-action="AccountInfo" class="position-relative me-4 my-auto">
                        <i class="fa fa-shopping-bag fa-2x"></i>
                        <span class="position-absolute bg-secondary rounded-circle d-flex align-items-center justify-content-center text-dark px-1" style="top: -5px; left: 15px; height: 20px; min-width: 20px;">3</span>
                    </a>

                    <form asp-controller="User" asp-action="AccountInfo" method="post">
                        <input type="hidden" value="@if (User.Identity.IsAuthenticated)
                            {@User.Claims.ElementAtOrDefault(0).Value}" name="id" />
                        <button type="submit" class="my-auto btn" style="color: #6d903e">
                            <i class="fas fa-user fa-2x"></i>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <span>@User.Identity.Name</span>
                            }
                        </button>
                    </form>

                </div>
            </div>
        </nav>
    </div>
</div>
<!-- Navbar End -->
<!-- Page Header Start -->
<div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center py-5">
        <h1 class="display-2 text-dark mb-4 animated slideInDown">Account Info</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item text-dark">Account</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->

@if (Model != null && Model.UserInfo != null)
{
    <div class="d-flex justify-content-center" style="padding-bottom: 50px">
        <button class="btn btn-outline-primary active" id="btninfo" onclick="enableInfo()">Info</button>
        <button class="btn btn-outline-primary" id="btnedit" onclick="enableEditing()">Edit</button>
    </div>

    <div id="info" style="display:block">
        @Html.Partial("AccountInfoSMALL",Model.UserInfo)
    </div>
    <div id="edit" style="display:none">
        @Html.Partial("AccountEditSMALL",Model.UserEdit)
    </div>

}




<a href="#" class="btn btn-lg btn-primary btn-lg-square rounded-circle back-to-top"><i class="bi bi-arrow-up"></i></a>

<script>
    function enableEditing() {
        document.getElementById('info').style.display = 'none';
        document.getElementById('edit').style.display = 'block';
        document.getElementById('btninfo').classList.remove('active');
        document.getElementById('btnedit').classList.add('active');
    }
    function enableInfo(){
        document.getElementById('info').style.display = 'block';
        document.getElementById('edit').style.display = 'none';
        document.getElementById('btninfo').classList.add('active');
        document.getElementById('btnedit').classList.remove('active');
    }
</script>